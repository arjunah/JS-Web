<h1>Edit Cube</h1>
<div class="form">
    <form action="/edit/{{cube._id}}" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="{{cube.name}}">
        <label for="name">Description</label>
        <textarea id="name" name="description">{{cube.description}}</textarea>
        <label for="image">Image URL</label>
        <input type="text" id="image" name="imageURL" value="{{cube.imageURL}}">
        <label for="difficulty">Difficulty</label>
        <select id="difficulty" name="difficulty">
            {{#selectDifficultyOption cube.difficulty 1}}
            <option value="1" selected="selected">1 - Very Easy</option>
            {{else}}
            <option value="1" selected="selected">1 - Very Easy</option>
            {{/selectDifficultyOption}}
            {{#selectDifficultyOption cube.difficulty 2}}
            <option value="2" selected="selected">2 - Easy</option>
            {{else}}
            <option value="2">2 - Easy</option>
            {{/selectDifficultyOption}}
            {{#selectDifficultyOption cube.difficulty 3}}
            <option value="3" selected="selected">3 - Medium (Standard 3x3)</option>
            {{else}}
            <option value="3">3 - Medium (Standard 3x3)</option>
            {{/selectDifficultyOption}}
            {{#selectDifficultyOption cube.difficulty 4}}
            <option value="4" selected="selected">4 - Intermediate</option>
            {{else}}
            <option value="4">4 - Intermediate</option>
            {{/selectDifficultyOption}}
            {{#selectDifficultyOption cube.difficulty 5}}
            <option value="5" selected="selected">5 - Expert</option>
            {{else}}
            <option value="5">5 - Expert</option>
            {{/selectDifficultyOption}}
            {{#selectDifficultyOption cube.difficulty 6}}
            <option value="6" selected="selected">6 - Hardcore</option>
            {{else}}
            <option value="6">6 - Hardcore</option>
            {{/selectDifficultyOption}}
        </select>
        <input type="submit" value="Edit">
    </form>
</div>